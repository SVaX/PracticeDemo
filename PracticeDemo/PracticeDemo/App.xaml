             xmlns:local="clr-namespace:PracticeDemo"
             StartupUri="MainMenuWindow.xaml">
    <Application.Resources>
        <Style x:Key="TextStyle">
            <Setter Property="Button.FontFamily" Value="Comic Sans MS"/>
